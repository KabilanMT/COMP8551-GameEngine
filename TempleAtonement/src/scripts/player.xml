            </ifVar>
            <ifVar name="scoreSecondDigit" value="3" type="int">
                <changeSprite name="../TempleAtonement/texture/Numbers/3.png"/>
            </ifVar>
            <ifVar name="scoreSecondDigit" value="4" type="int">
