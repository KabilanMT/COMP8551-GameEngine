            </ifVar>
            <ifVar name="scoreSecondDigit" value="1" type="int">
                <changeSprite name="../TempleAtonement/texture/Numbers/1.png"/>
            </ifVar>
            <ifVar name="scoreSecondDigit" value="2" type="int">
